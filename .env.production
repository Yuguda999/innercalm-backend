# Production Environment Configuration
ENVIRONMENT=production

# OpenAI Configuration
OPENAI_API_KEY="your_openai_api_key_here"

# Database Configuration - Production PostgreSQL
DATABASE_URL="your_postgresql_database_url_here"

# Security Configuration - Strong for production
SECRET_KEY="prod-secure-secret-key-change-this-to-a-secure-random-string"

# Environment Settings
DEBUG=False

# CORS Configuration - Production domains
ALLOWED_ORIGINS="https://your-frontend-domain.vercel.app,https://innercalm-frontend.vercel.app"

# AI Configuration
MAX_CONVERSATION_HISTORY=20
EMOTION_ANALYSIS_THRESHOLD=0.5
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM="HS256"
OPENAI_MODEL="gpt-4"

# Logging Level
LOG_LEVEL="INFO"
