# Development Environment Configuration
ENVIRONMENT=development

# OpenAI Configuration
OPENAI_API_KEY=""

# Database Configuration - Local SQLite for development
DATABASE_URL="sqlite:///./innercalm_dev.db"

# Security Configuration - Less secure for development
SECRET_KEY="dev-secret-key-not-for-production"

# Environment Settings
DEBUG=True

# CORS Configuration - Local development
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000"

# AI Configuration
MAX_CONVERSATION_HISTORY=20
EMOTION_ANALYSIS_THRESHOLD=0.5
ACCESS_TOKEN_EXPIRE_MINUTES=60
ALGORITHM="HS256"
OPENAI_MODEL="gpt-4"

# Hume AI Configuration (for voice analysis)
# Replace with your actual Hume AI API key from https://hume.ai
HUME_API_KEY=""

# Emotion Model Configuration
# Set to true to preload emotion model during server startup (slower startup, faster first chat)
# Set to false for faster startup but slower first chat (default)
PRELOAD_EMOTION_MODEL=false

# Logging Level
LOG_LEVEL="DEBUG"
