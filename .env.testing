# Testing Environment Configuration
ENVIRONMENT=testing

# OpenAI Configuration - Use test key or mock
OPENAI_API_KEY="test-key-or-mock"

# Database Configuration - In-memory SQLite for testing
DATABASE_URL="sqlite:///:memory:"

# Security Configuration - Simple for testing
SECRET_KEY="test-secret-key"

# Environment Settings
DEBUG=True

# CORS Configuration - Allow all for testing
ALLOWED_ORIGINS="*"

# AI Configuration - Faster settings for testing
MAX_CONVERSATION_HISTORY=5
EMOTION_ANALYSIS_THRESHOLD=0.3
ACCESS_TOKEN_EXPIRE_MINUTES=5
ALGORITHM="HS256"
OPENAI_MODEL="gpt-3.5-turbo"

# Logging Level
LOG_LEVEL="DEBUG"
